{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "module": "none",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "build",
    "target": "es6",
    "strictNullChecks": true,
    "lib": ["es2016", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}
