{
  "name": "esverify-web",
  "version": "0.0.3",
  "description": "esverify web editor",
  "author": "Christopher Schuster <cs@livoris.net>",
  "license": "MIT",
  "scripts": {
    "index": "curl https://raw.githubusercontent.com/levjj/esverify/master/README.md | tail -n +3 | pandoc -f markdown -o src/index.html",
    "jspm": "jspm install",
    "less": "lessc src/style.less build/style.css",
    "app": "jspm bundle-sfx app.js - child_process build/app.js --globals \"{child_process:'{}'}\" --format global --skip-source-maps",
    "build": "npm run index && npm run jspm && npm run less && npm run app",
    "serve": "node serve.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/levjj/esverify-web.git"
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "jspm": "^0.16.53",
    "less": "^2.7.3"
  },
  "jspm": {
    "directories": {
      "baseURL": "src"
    },
    "dependencies": {
      "brace": "npm:brace@^0.10.0",
      "esverify": "npm:esverify@^0.15.1",
      "jquery": "npm:jquery@^3.2.1",
      "spectre.css": "npm:spectre.css@^0.2.15"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
